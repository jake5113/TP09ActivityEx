<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="4dp" android:color="#FF888888" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <solid android:color="#FF888888" />
            <stroke android:color="#FF888888" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>